<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signupacticity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/silverblackunder"
    tools:context="com.example.chintu.myapplication.Signupacticity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:textSize="30sp"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:text="Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/nametext"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="EmailID"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:id="@+id/EmailID"
        android:textSize="30sp"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_below="@+id/nametext"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/emailtext1"
        android:layout_below="@+id/EmailID"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/password"
        android:textSize="30sp"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/passwordtext1"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SignUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Button"
        android:id="@+id/signupbut"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/passwordtext1"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
